@model Book  //receive data (1 random book) from Components/WeekBookViewCmponent.cs

<h3 class="mt-5 text-decoration-underline">Books of the week</h3>

@if(Model == null) //if there is no book in the database
{
<div class="alert alert-danger" role="alert">
    No books found in our BookShop
</div>
}
else
{    
@* passing a book to Partial View *@
<div class="col">
    <partial name="_bookThumbnail" model="Model" />   
</div>   
}