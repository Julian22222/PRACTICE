@using Microsoft.Extensions.Configuration 
@inject IConfiguration _configuration

@* <div class="second_mainPage-container" style="display: flex; justify-content: space-between; width: 100%;"> *@
<div class="container">
    
    <div class="row">


        <div class="col-12">
            <div class="row">
                <div>
                    @* using Title property from the Book  *@
                    <h1 class="d-flex justify-content-center text-danger">Supreme Car Showroom</h1>  
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
                <ol class="carousel-indicators">
                    <li type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></li>
                    <li type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></li>
                    <li type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></li>
                    <li type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 4"></li>
                    <li type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="4" aria-label="Slide 5"></li>
                    <li type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="5" aria-label="Slide 6"></li>
                    <li type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="6" aria-label="Slide 7"></li>
                    <li type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="7" aria-label="Slide 8"></li>
                    <li type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="8" aria-label="Slide 9"></li>
                    <li type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="9" aria-label="Slide 10"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        @* inserting images from wwwroot *@
                        @* asp-append-version="true" - make a cache key in the browser memory, 
                        when update the same picture with the same name it will change it in the View from server, 
                        not from cache memory, Image tag helpers can use only from own server- static files folder, not images from URL *@
                        <img src="IMG/Home/slide1.jpg" class="d-block w-100" alt="First slide" asp-append-version="true">
                    </div>
                    <div class="carousel-item">
                        <img src="IMG/Home/slide111.jpg" class="d-block w-100" alt="Second slide" asp-append-version="true">
                    </div>
                    <div class="carousel-item">
                        <img src="IMG/Home/slide2.jpg" class="d-block w-100" alt="Third slide" asp-append-version="true">
                    </div>
                    <div class="carousel-item">
                        <img src="IMG/Home/slide22.jpg" class="d-block w-100" alt="Fourth slide" asp-append-version="true">
                    </div>
                    <div class="carousel-item">
                        <img src="IMG/Home/slide3.jpg" class="d-block w-100" alt="Fifth slide" asp-append-version="true">
                    </div>
                    <div class="carousel-item">
                        <img src="IMG/Home/slide4.jpg" class="d-block w-100" alt="Sixth slide" asp-append-version="true">
                    </div>
                    <div class="carousel-item">
                        <img src="IMG/Home/slide5.jpg" class="d-block w-100" alt="Seventh slide" asp-append-version="true">
                    </div>
                    <div class="carousel-item">
                        <img src="IMG/Home/slide6.jpg" class="d-block w-100" alt="Eighth slide" asp-append-version="true">
                    </div>
                    <div class="carousel-item">
                        <img src="IMG/Home/slide7.jpg" class="d-block w-100" alt="Ninth slide" asp-append-version="true">
                    </div>
                    <div class="carousel-item">
                        <img src="IMG/Home/slide8.jpg" class="d-block w-100" alt="Tenth slide" asp-append-version="true">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>


        
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    @* using Title property from the Book  *@
                    <h5>@_configuration["MainPage_text"]</h5>  
                </div>
            </div>

            <div class="container">
                
            <div class="row">
                <div class="col-md-4">
                    <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#modal">
                        Read more
                    </button>
                </div>

                @* Model- popUp window *@
                <div class="modal fade" id="modal">
                    <div class="modal-dialog modal-fullscreen-md-down"> 
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1>Header</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">Lorem ipsum, dolor sit amet consectetur adipisicing elit. Iusto cupiditate a facilis repellat unde corporis ut illum, voluptatum perferendis minus!</div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>

                <hr class="mt-2"/>
            </div>
            </div>

        </div>
        <hr/>
    </div>

</div>