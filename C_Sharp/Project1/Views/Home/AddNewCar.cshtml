@model Car

<h1>Add New Car</h1>

<form method="post" asp-controller="home" asp-action="AddNewCar" >

    <div asp-validation-summary="All" class="text-danger"></div> 

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Year"></label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <div class="form-group">
        <select asp-for="FuelType" class="form-select" asp-items="ViewBag.Fuel" style="width: auto;">
            <option value="">Select Fuel Type</option>
        </select>
        <span asp-validation-for="FuelType" class="text-danger"></span>
    </div>

     <br />

    <div class="form-check form-switch">
        <input class="form-check-input" id="isAvailableSwitch" asp-for="IsAvailable" type="checkbox" />
        <label class="form-check-label" asp-for="IsAvailable" for="isAvailableSwitch"></label>
        <span asp-validation-for="IsAvailable" class="text-danger"></span>
    </div>

    <br/>

    <div class="row">
        <div class="col-9"></div>
        <div class="col-3">
            <div class="container">
                <div class="btn-group">
                    <button type="submit" class="btn btn-outline-primary" style="width: 100px;">Submit</button>
                    @* <input type="submit" class="btn btn-primary" value="Submit"/> *@
                    @* the same functionality <input type="submit" /> and <button type="submit"> *@
                    <a  class="btn btn-outline-danger" asp-controller="home" asp-action="Index" role="button">Cancel</a>
                </div>
            </div>
        </div>
    </div>


</form>