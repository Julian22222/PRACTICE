@model Book   //import Book Model


@{ //in this brackets we can use C# code
    ViewData["Title"] = "Add new book";
}

<div class="container">

    <h3 class="display-4">Add new book</h3>

    <form method="post" asp-controller="Book" asp-action="AddNewBook">
        @*we don't need to use --> asp-action="" and asp-controller="" if we have Controller with the same name as action method - AddNewBook
        if the action method is different then we use -> asp-action="name of action method to call"  and asp-controller="controller name where we have an action method"
         *@

        @* common input -->
    <input type="text"/> *@


        <div class="form-group">
            @* asp-for="Title"  input element for Title property for our Book Model  *@
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control"/>
        </div>

        <div class="form-group">
            <label asp-for="Author"></label>
            <input asp-for="Author" class="form-control"/>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>


        <div class="form-group">
            <label asp-for="TotalPages"></label>
            <input asp-for="TotalPages" class="form-control" />
        </div>
        


        <div class="form-group">
            <input type="submit" value="Add book" class="btn btn-primary" />
        </div>

      
        
</form>
</div>

